<%- include('header') %>

<main class="pt-24 px-6 max-w-5xl mx-auto">
  <h2 class="text-2xl font-bold mb-6">Search Results for "<%= query %>"</h2>

  <% if (!courses || courses.length === 0) { %>
    <p class="text-gray-600">No courses found.</p>
  <% } else { %>
    <ul class="space-y-6">
      <% courses.forEach(course => { %>
        <li class="p-4 bg-white shadow rounded-lg">
          <h3 class="text-xl font-semibold text-blue-700 mb-2"><%= course.coursename %></h3>
          <p class="text-gray-800 mb-2">
            Educator: <%= course.User.firstname %> <%= course.User.lastname %>
          </p>
          <% if (user.role === 'student') { %>
            <a href="/student/courses/<%= course.id %>/chapters" class="text-indigo-600 hover:underline inline-block">View Course</a>
          <% } else if (user.role === 'educator') { %>
            <a href="/courses/<%= course.id %>/chapters" class="text-indigo-600 hover:underline inline-block">View Course</a>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } %>
</main>
