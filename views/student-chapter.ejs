<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    footer {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: #f3f4f6;
      padding: .35rem 0;
      text-align: center;
      box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body class="bg-white min-h-screen flex flex-col ml-5 mr-5">

  <div class="flex justify-between items-start mt-6">
    <!-- Left side: Chapter list -->
    <div class="w-full md:w-1/2">
      <nav class="text-sm text-gray-600 mb-2">
        <a href="/student" class="underline text-xl">Home</a> &gt;<span class="text-blue-800 text-xl"><%= course.coursename %></span> 
      </nav>

      <h1 class="text-4xl font-bold mb-2 text-gray-800 mt-5"><%= course.coursename %></h1>
      <hr class="my-5 border-t-2 border-gray-400">
      <h2 class="text-2xl font-semibold italic underline text-black-700 mb-4">Chapters</h2>

    <% if (chapters.length === 0) { %>
    <p class="text-gray-600">No chapters found in this course.</p>
    <% } else { %>
    <div class="flex flex-col gap-3">
        <% chapters.forEach(ch => { %>
        <% if (enrolledCourseIds.includes(course.id)) { %>
            <a href="/student/chapters/<%= ch.id %>/pages" class="no-underline block">
            <div class="flex justify-between items-center border rounded-lg px-4 py-3 my-2 shadow-sm hover:shadow-md transition bg-white">
                <span class="text-md font-medium text-gray-800"><%= ch.chaptername %></span>
            </div>
            </a>
        <% } else { %>
            <div class="flex justify-between items-center border rounded-lg px-4 py-3 my-2 shadow-sm bg-white-100 cursor-not-allowed">
            <span class="text-md font-medium text-black-800"><%= ch.chaptername %></span>
            <svg class="w-6 h-6 text-black-700 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 14v3m-3-6V7a3 3 0 1 1 6 0v4m-8 0h10a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1v-7a1 1 0 0 1 1-1Z"/>
            </svg>
            </div>
        <% } %>
        <% }) %>
    </div>
    <% } %>
    </div>


    <!-- Right side: Course card (only show if not enrolled) -->
    <% if (!enrolledCourseIds.includes(course.id)) { %>
      <div class="w-1/5 border-black rounded p-4 shadow-md flex flex-col justify-between mx-auto mt-10">
        <div>
          <h3 class="text-xl font-bold mb-2"><%= course.coursename %></h3>
          <div class="flex justify-between items-center text-gray-700 mb-4">
            <p class="text-gray-600 font-bold"><%= course.User.firstname %> <%= course.User.lastname %></p>
            <div class="flex items-center gap-1">
              <svg class="w-6 h-6 text-gray-800" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3.78552 9.5 12.7855 14l9-4.5-9-4.5-8.99998 4.5Zm0 0V17m3-6v6.2222c0 .3483 2 1.7778 
                  5.99998 1.7778 4 0 6-1.3738 6-1.7778V11" />
              </svg>
              <span class="font-semibold"><%= enrollmentMap[course.id] || 0 %></span>
            </div>
          </div>
          <div class="flex justify-center items-center w-full mt-4">          
            <form action="/enroll/<%= course.id %>" method="POST" class="w-1/2">
                <button type="submit" class="w-full bg-green-700 hover:bg-green-800 text-white font-semibold px-4 py-2 rounded shadow">
                    Enroll
                </button>
            </form>
          </div>
        </div>
    <% } %>

  <footer class="mt-auto text-sm text-gray-500">
    <a href="/student" class="underline hover:text-gray-700">Back to Dashboard</a>
  </footer>

</body>
</html>
