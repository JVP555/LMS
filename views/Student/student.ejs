<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white p-8 font-sans">

  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold">Welcome <%= user.firstname %> <%= user.lastname %>!</h1>
    <div class="space-x-2">
      <button onclick="window.location.href='/logout'" class="bg-red-600 text-white px-4 py-1 rounded shadow hover:bg-red-700">Sign Out</button>
      <button onclick="window.location.href='/changepassword/<%= user.id %>'" class="bg-yellow-500 text-white px-4 py-1 rounded shadow hover:bg-yellow-600">Change Password</button>
    </div>
  </div>

  <!-- Flash messages -->
  <%- include('../General/notifications', { messages: messages }) %>



  <!-- Enrolled Courses -->
  <h2 class="text-2xl font-bold mb-4 underline text-center">You have joined the following courses:</h2>
  <% if (enrolledCourses.length === 0) { %>
    <p class="mb-6">No courses enrolled yet.</p>
  <% } else { %>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
      <% enrolledCourses.forEach(course => { %>
        <div class="border-2 border-black rounded p-4 shadow-md flex flex-col justify-between">
          <div>
            <h3 class="text-xl font-bold mb-2"><%= course.coursename %></h3>
            <div class="flex justify-between items-center text-gray-700 mb-4">
              <p class="text-gray-600 font-bold"><%= course.User.firstname %> <%= course.User.lastname %></p>
              <div class="flex items-center gap-1">
                <svg class="w-6 h-6 text-gray-800" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3.78552 9.5 12.7855 14l9-4.5-9-4.5-8.99998 4.5Zm0 0V17m3-6v6.2222c0 .3483 2 1.7778 
                    5.99998 1.7778 4 0 6-1.3738 6-1.7778V11" />
                </svg>
                <span class="font-semibold"><%= enrollmentMap[course.id] || 0 %></span>
              </div>
            </div>
          </div>
          <div class="flex gap-4">
            <a href="student/courses/<%= course.id %>/chapters" class="w-1/2 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded shadow flex justify-center items-center gap-1">
              Continue
              <svg class="w-5 h-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 18V6l8 6-8 6Z"/>
              </svg>
            </a>
            <div class="w-1/2 bg-purple-600 text-white px-2 py-3 rounded shadow text-center font-semibold">
              Completed: <%= completionPercentage[course.id] || 0 %>%
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
  <hr class="my-6 border-t-2 border-gray-400">

  <!-- Available Courses -->
  <h2 class="text-2xl font-bold mb-4 underline text-center">Available Courses</h2>
  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
    <% allCourses.forEach(course => {
         if (!enrolledCourseIds.includes(course.id)) { %>
      <div class="border-2 border-black rounded p-4 shadow-md flex flex-col justify-between">
        <div>
          <h3 class="text-xl font-bold mb-2"><%= course.coursename %></h3>
          <div class="flex justify-between items-center text-gray-700 mb-4">
            <p class="text-gray-600 font-bold"><%= course.User.firstname %> <%= course.User.lastname %></p>
            <div class="flex items-center gap-1">
              <svg class="w-6 h-6 text-gray-800" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3.78552 9.5 12.7855 14l9-4.5-9-4.5-8.99998 4.5Zm0 0V17m3-6v6.2222c0 .3483 2 1.7778 
                  5.99998 1.7778 4 0 6-1.3738 6-1.7778V11" />
              </svg>
              <span class="font-semibold"><%= enrollmentMap[course.id] || 0 %></span>
            </div>
          </div>
        </div>
        <div class="flex gap-4">
          <a href="/student/courses/<%= course.id %>/chapters" class="w-1/2 bg-cyan-400 hover:bg-cyan-500 text-black font-semibold px-4 py-3 rounded shadow text-center">
            View course
          </a>
          <form action="/enroll/<%= course.id %>" method="POST" class="w-1/2">
            <button type="submit" class="w-full bg-green-700 hover:bg-green-800 text-white font-semibold px-4 py-3 rounded shadow">
              Enroll
            </button>
          </form>
        </div>
      </div>
    <% } }) %>
  </div>

</body>
</html>
