<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
  <%- include('../General/header') %>
  <%- include('../General/notifications', { messages: messages }) %>

  <main class="flex flex-col md:flex-row gap-6 px-6 mt-6 flex-grow">

    <!-- Left side: Chapter list -->
    <div class="w-full md:w-2/3">
      <h1 class="text-4xl font-bold text-gray-800 mb-2"><%= course.coursename %></h1>
      <hr class="my-4 border-t-2 border-gray-300">
      <h2 class="text-2xl font-semibold underline text-gray-800 mb-4">Chapters</h2>

      <% if (chapters.length === 0) { %>
        <p class="text-gray-600">No chapters found in this course.</p>
      <% } else { %>
        <div class="flex flex-col gap-3">
          <% chapters.forEach(ch => { %>
            <% if (enrolledCourseIds.includes(course.id)) { %>
              <a href="/student/chapters/<%= ch.id %>/pages" class="block">
                <div class="flex justify-between items-center border border-gray-300 px-4 py-3 bg-white shadow-sm hover:shadow-md rounded-md transition">
                  <span class="text-md font-medium text-gray-800"><%= ch.chaptername %></span>
                  <% if (ch.completed) { %>
                    <span class="text-green-800 border border-green-400 px-4 py-1 bg-green-100 rounded font-semibold">Completed</span>
                  <% } %>
                </div>
              </a>
            <% } else { %>
              <div class="flex justify-between items-center border border-gray-300 px-4 py-3 rounded-md bg-gray-100 cursor-not-allowed shadow-sm">
                <span class="text-md font-medium text-gray-600"><%= ch.chaptername %></span>
                <svg class="w-6 h-6 text-gray-500 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 14v3m-3-6V7a3 3 0 1 1 6 0v4m-8 0h10a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1v-7a1 1 0 0 1 1-1Z"/>
                </svg>
              </div>
            <% } %>
          <% }) %>
        </div>
      <% } %>
    </div>

    <!-- Right side: Course info card (only if not enrolled) -->
    <% if (!enrolledCourseIds.includes(course.id)) { %>
      <div class="w-full md:w-1/3 bg-white shadow-lg rounded-lg p-6 border border-gray-300">
        <h3 class="text-xl font-bold text-gray-800 mb-2"><%= course.coursename %></h3>
        <div class="text-gray-700 mb-4">
          <p class="font-medium"><%= course.User.firstname %> <%= course.User.lastname %></p>
          <div class="flex items-center gap-2 mt-2">
            <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M3.78552 9.5 12.7855 14l9-4.5-9-4.5-9 4.5Zm0 0V17m3-6v6.2222c0 .3483 2 1.7778 
                6 1.7778 4 0 6-1.3738 6-1.7778V11" />
            </svg>
            <span class="font-semibold"><%= enrollmentMap[course.id] || 0 %> Enrolled</span>
          </div>
        </div>

        <form action="/enroll/<%= course.id %>" method="POST" class="mt-6">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded shadow">
            Enroll in Course
          </button>
        </form>
      </div>
    <% } %>

  </main>
</body>
</html>
