<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white p-8 font-sans">

  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold">Welcome <%= user.firstname %> <%= user.lastname %>!</h1>
    <div class="space-x-2">
      <button onclick="window.location.href='/logout'" class="bg-red-600 text-white px-4 py-1 rounded shadow hover:bg-red-700">Sign Out</button>
      <button onclick="window.location.href='/changepassword/<%= user.id %>'" class="bg-yellow-500 text-white px-4 py-1 rounded shadow hover:bg-yellow-600">Change Password</button>
    </div>
  </div>

  <!-- Flash messages -->
  <% if (messages.error.length > 0) { %>
    <div class="bg-red-100 text-red-800 px-4 py-2 mb-4 rounded">
      <%= messages.error[0] %>
    </div>
  <% } %>
  <% if (messages.success.length > 0) { %>
    <div class="bg-green-100 text-green-800 px-4 py-2 mb-4 rounded">
      <%= messages.success[0] %>
    </div>
  <% } %>

  <!-- Enrolled Courses -->
  <h2 class="text-2xl font-bold mb-4 underline">You have joined the following courses:</h2>
  <% if (enrolledCourses.length === 0) { %>
    <p class="mb-6">No courses enrolled yet.</p>
  <% } else { %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      <% enrolledCourses.forEach(course => { %>
        <div class="border-2 border-black rounded p-4 shadow-md">
          <h3 class="text-xl font-bold mb-1"><%= course.coursename %></h3>
          <p class="text-gray-600 font-bold"><%= course.User.firstname %> <%= course.User.lastname %></p>
          <div class="flex items-center gap-2 text-gray-700 mt-1">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 2a6 6 0 100 12A6 6 0 0010 2z" />
            </svg>
            <span>279</span>
          </div>
          <div class="flex gap-3 mt-4">
            <a href="/courses/<%= course.id %>/chapters" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded shadow">Continue</a>
            <span class="bg-purple-600 text-white px-3 py-1 rounded shadow">Completed: 0%</span>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Available Courses -->
  <h2 class="text-2xl font-bold mb-4 underline">Available Courses</h2>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% allCourses.forEach(course => {
         if (!enrolledCourseIds.includes(course.id)) { %>
      <div class="border-2 border-black rounded p-4 shadow-md">
        <h3 class="text-xl font-bold mb-1"><%= course.coursename %></h3>
        <p class="text-gray-600 font-bold"><%= course.User.firstname %> <%= course.User.lastname %></p>
        <div class="flex items-center gap-2 text-gray-700 mt-1">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 2a6 6 0 100 12A6 6 0 0010 2z" />
          </svg>
          <span>123</span>
        </div>

        <div class="flex gap-3 mt-4">
          <a href="/courses/<%= course.id %>/chapters" class="bg-cyan-400 hover:bg-cyan-500 text-black font-semibold px-3 py-1 rounded shadow">View course</a>
          <form action="/enroll/<%= course.id %>" method="POST">
            <button type="submit" class="bg-green-700 hover:bg-green-800 text-white font-semibold px-3 py-1 rounded shadow">
              Enroll
            </button>
          </form>
        </div>
      </div>
    <% } }) %>
  </div>

</body>
</html>
