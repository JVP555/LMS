<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white p-8 font-sans">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Welcome <%= user.firstname %> <%= user.lastname %>!</h1>
    <button onclick="window.location.href='/logout'" class="bg-red-600 text-white px-4 py-1 rounded shadow hover:bg-red-700">
        Sign Out
    </button>
  </div>

  <div class="mb-8">
    <h2 class="text-xl font-semibold mb-4">Administrative actions</h2>
    <div class="space-x-4 space-y-2">
      <button onclick="window.location.href='/newcourse'" class="bg-blue-600 text-white px-4 py-2 rounded shadow">Create a new course</button>
      <button class="bg-purple-600 text-white px-4 py-2 rounded shadow">My courses</button>
      <button class="bg-cyan-600 text-white px-4 py-2 rounded shadow">View reports</button>
    </div>
  </div>

  <hr class="my-8">

  <h2 class="text-xl font-semibold mb-4">Available Courses</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Course Card 1 -->
    <div class="border p-4 rounded shadow">
      <h3 class="text-lg font-semibold mb-2">Python</h3>
      <p class="text-gray-600">Richard Roe</p>
      <div class="flex items-center text-gray-700 my-2">
        <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 2a6 6 0 00-6 6v3a4 4 0 00-2 3.464V16h16v-1.536A4 4 0 0016 11V8a6 6 0 00-6-6z"/>
        </svg>
        279
      </div>
      <div class="flex space-x-2">
        <button class="bg-cyan-400 text-black px-3 py-1 rounded">View course</button>
        <button class="bg-green-500 text-white px-3 py-1 rounded">Enroll</button>
      </div>
    </div>

    <!-- Course Card 2 -->
    <div class="border p-4 rounded shadow">
      <h3 class="text-lg font-semibold mb-2">Android Development</h3>
      <p class="text-gray-600">Richard Roe</p>
      <div class="flex items-center text-gray-700 my-2">
        <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 2a6 6 0 00-6 6v3a4 4 0 00-2 3.464V16h16v-1.536A4 4 0 0016 11V8a6 6 0 00-6-6z"/>
        </svg>
        211
      </div>
      <div class="flex space-x-2">
        <button class="bg-cyan-400 text-black px-3 py-1 rounded">View course</button>
        <button class="bg-green-500 text-white px-3 py-1 rounded">Enroll</button>
      </div>
    </div>
  </div>
</body>
</html>
