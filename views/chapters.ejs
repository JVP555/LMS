<!DOCTYPE html>
<html>
<head>
  <title><%= course.coursename %> - Chapters</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    footer {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: #f3f4f6;
      padding: .35rem 0;
      text-align: center;
      box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col ml-5">

  <h1 class="text-2xl font-bold mb-4 mt-3 ext-gray-800">
    Chapters in <%= course.coursename %>
  </h1>

  <% if (chapters.length === 0) { %>
    <p class="text-center text-gray-600">No chapters found in this course.</p>
  <% } else { %>
    <div class="flex flex-col gap-4 w-2/5 mt-4">
      <% chapters.forEach(ch => { %>
        <a href="/chapters/<%= ch.id %>/pages" class="block p-4 border rounded-xl shadow-md transition duration-300 hover:shadow-lg hover:bg-gray-100">
          <h2 class="text-lg font-semibold text-blue-700"><%= ch.chaptername %></h2>
        </a>
      <% }) %>
    </div>
  <% } %>

  <footer class="mt-auto p-4 flex justify-center items-center gap-4 text-sm text-gray-500">
    <button onclick="window.history.back()" class="bg-gray-600 text-white px-6 py-2 rounded hover:bg-gray-700 transition">
      Go Back
    </button>
    <a href="/Educator" class="underline hover:text-gray-700 transition">
      Back to Dashboard
    </a>
  </footer>

</body>
</html>
