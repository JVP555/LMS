<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    footer {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: #f3f4f6;
      padding: .35rem 0;
      text-align: center;
      box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col ml-5 mr-5">

  <h1 class="text-2xl font-bold mb-4 mt-3 text-gray-800">
    <%= title %> in <%= course.coursename %>
  </h1>

  <% if (title === 'My Chapters') { %>
    <div class="mb-4">
      <a href="/my-courses/<%= course.id %>/my-chapters/new?redirectTo=/my-chapters/<%= course.id %>" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        + Create New Chapter
      </a>
    </div>
  <% } %>

  <% if (chapters.length === 0) { %>
    <p class="text-center text-gray-600">No chapters found in this course.</p>
  <% } else { %>
    <div class="flex flex-col gap-4 w-full md:w-3/5 mt-4">
      <% chapters.forEach(ch => { %>
        <a href="/chapters/<%= ch.id %>/pages?redirectTo=/my-chapters/<%= course.id %>" class="text-lg font-semibold text-blue-700 hover:underline">
        <div class="flex justify-between items-center p-4 border rounded-xl shadow-md hover:shadow-lg hover:bg-gray-100 transition">
          <%= ch.chaptername %>
          <% if (title === 'My Chapters') { %>
            <div class="flex gap-3">
              <a href="/chapters/<%= ch.id %>/edit?redirectTo=/my-chapters/<%= course.id %>" class="text-blue-600 hover:text-blue-800">
                Edit
              </a>
              <form action="/chapters/<%= ch.id %>/delete?redirectTo=/my-chapters/<%= course.id %>" method="POST">
                <button type="submit" class="text-red-600 hover:text-red-800">Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      </a>
      <% }) %>
    </div>
  <% } %>

  <footer class="mt-auto p-4 flex justify-center items-center gap-4 text-sm text-gray-500">
    <button onclick="window.location.href='/my-chapters/<%= course.id %>'" class="bg-gray-600 text-white px-6 py-2 rounded hover:bg-gray-700 transition">
      Go Back
    </button>
    <a href="/Educator" class="underline hover:text-gray-700 transition">
      Back to Dashboard
    </a>
  </footer>

</body>
</html>
