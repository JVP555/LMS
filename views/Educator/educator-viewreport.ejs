<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Educator | Course Enrollment Reports</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-900 font-sans">
  <div class="mt-6">
    <nav class="text-l mb-2">
      <a href="/Educator" class="underline text-blue-600 ml-5">Dashboard</a> &gt;
      <span class="text-black-600">Reports</span>
    </nav>
  </div>

  <div class="p-6 max-w-5xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Course Enrollment Reports</h1>

    <% if (reportData.length === 0) { %>
      <div class="text-center text-gray-500 mt-12">
        <p>No courses available to display reports.</p>
      </div>
    <% } else { %>
      <table class="w-full table-auto border border-gray-300 shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-100 text-left">
          <tr>
            <th class="px-4 py-2">#</th>
            <th class="px-4 py-2">Course Title</th>
            <th class="px-4 py-2">Enrolled Students</th>
            <th class="px-4 py-2">Relative Popularity</th>
          </tr>
        </thead>
        <tbody>
          <% reportData.forEach((report, index) => { %>
            <tr class="border-t hover:bg-gray-50">
              <td class="px-4 py-2"><%= index + 1 %></td>
              <td class="px-4 py-2 font-medium"><%= report.course.coursename %></td>
              <td class="px-4 py-2"><%= report.enrolledCount %></td>
              <td class="px-4 py-2">
                <div class="flex items-center gap-2">
                  <div class="w-full bg-gray-200 rounded-full h-2.5">
                    <% if (typeof report.percentage !== "undefined") { %>
                    <div class="bg-green-500 h-2.5 rounded-full" style="width: <%= report.percentage %>%"></div>
                    <% } %>
                  </div>
                  <span class="text-sm text-gray-600 whitespace-nowrap"><%= report.percentage %>%</span>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>

</body>
</html>
