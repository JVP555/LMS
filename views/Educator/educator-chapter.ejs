<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col ml-5 mr-5">
  <%- include('../General/header') %>

  <% if (title === 'My Chapters') { %>

    <%- include('../General/notifications', { messages: messages }) %>
    <div class="mb-4">
      <a href="/my-courses/<%= course.id %>/my-chapters/new?redirectTo=/my-chapters/<%= course.id %>" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        + Create New Chapter
      </a>
    </div>
  <% } %>

  <h1 class="text-2xl font-bold mb-4 mt-3 text-gray-800">
    <%= title %> in <%= course.coursename %>
  </h1>
  <% if (chapters.length === 0) { %>
    <p class="text-center text-gray-600">No chapters found in this course.</p>
  <% } else { %>
    <div class="flex flex-col gap-4 w-full md:w-3/5 mt-4">
  <% chapters.forEach(ch => { %>
    <% if (title === 'My Chapters') { %>
      <div 
        onclick="window.location.href='/my-chapters/<%= ch.id %>/my-pages?redirectTo=/my-chapters/<%= course.id %>'" 
        class="cursor-pointer flex justify-between items-center p-4 border rounded-xl shadow-md hover:shadow-lg hover:bg-gray-100 transition"
      >
    <% }else { %>
      <div 
        onclick="window.location.href='/chapters/<%= ch.id %>/pages'" 
        class="cursor-pointer flex justify-between items-center p-4 border rounded-xl shadow-md hover:shadow-lg hover:bg-gray-100 transition"
      >
    <% } %>
      <span class="text-lg font-semibold text-blue-700">
        <%= ch.chaptername %>
      </span>
      <% if (title === 'My Chapters') { %>
        <div class="flex gap-3">
          <a href="/chapters/<%= ch.id %>/edit?redirectTo=/my-chapters/<%= course.id %>" class="text-blue-600 hover:text-blue-800">
            Edit
          </a>
          <form action="/chapters/<%= ch.id %>/delete?redirectTo=/my-chapters/<%= course.id %>" method="POST" onClick="event.stopPropagation();">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <button type="submit" class="text-red-600 hover:text-red-800">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  <% }) %>
</div>

  <% } %>

</body>
</html>
