<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title><%= title %></title>
  <style>
    footer {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: #f3f4f6;
      padding: .35rem 0;
      text-align: center;
      box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col ml-5 mr-5">



    <% if (title === 'My Pages') { %>
    <%- include('../General/notifications', { messages: messages }) %>
    <div class="mt-6">
      <nav class="text-l mb-2">
        <a href="/Educator" class="underline text-blue-600">Dashboard</a> &gt;
        <a href="/my-courses" class="underline text-blue-600">
          My Courses
        </a> &gt;
        <a href="/my-chapters/<%= chapter.courseId %>" class="underline text-blue-600">
          <%= chapter.Course.coursename %>
        </a> &gt;
        <span class="text-black-600"><%= chapter.chaptername %></span>
      </nav>
    </div>
    <hr class="mb-6 border-t-2 border-gray-400">


    <div class="mb-4">
      <a href="/my-chapter/<%= chapter.id %>/my-pages/new?redirectTo=/my-chapter/<%= chapter.id %>/my-pages" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        + Create New Page
      </a>
    </div>
    <h1 class="text-2xl font-bold mb-4 mt-3 text-gray-800"><%= title %> in <%= chapter.chaptername %></h1>
    <% } else { %>
      <div class="mt-6">
        <nav class="text-l mb-2">
          <a href="/Educator" class="underline text-blue-600">Dashboard</a> &gt;
          <a href="/courses/<%= chapter.Course.id %>/chapters" class="underline text-blue-600">
            <%= chapter.Course.coursename %>
          </a> &gt;
          <span class="text-black-600"><%= chapter.chaptername %></span>
        </nav>
      </div>
      <hr class="mb-6 border-t-2 border-gray-400">
      <h1 class="text-2xl font-bold mb-4 mt-3 text-gray-800">Pages of Chapter: <%= chapter.chaptername %></h1>     
      
    <% } %>
  </h1>


  <% if (pages.length === 0) { %>
    <p class="text-gray-600">No pages found for this chapter.</p>
  <% } else { %>
    <div class="flex flex-col gap-4 w-full md:w-3/5 mt-4">
      <% pages.forEach(page => { %>
        <% if (title === 'My Pages') { %>
          <div 
            onclick="window.location.href='/my-page/<%= page.id %>'" 
            class="cursor-pointer flex justify-between items-center p-4 border rounded-xl shadow-md hover:shadow-lg hover:bg-gray-100 transition"
          >
            <span class="text-lg font-semibold text-blue-700"><%= page.title %></span>
            <div class="flex gap-3">
              <a href="/pages/<%= page.id %>/edit?redirectTo=/my-chapters/<%= chapter.id %>/my-pages" class="text-blue-600 hover:text-blue-800">
                Edit
              </a>
              <form action="/pages/<%= page.id %>/delete?redirectTo=/my-chapters/<%= chapter.id %>/my-pages" method="POST" onClick="event.stopPropagation();">
                <button type="submit" class="text-red-600 hover:text-red-800">Delete</button>
              </form>
            </div>
          </div>
        <% } else { %>
          <a href="/page/<%= page.id %>" class="block p-4 border rounded-xl shadow-md transition duration-300 hover:shadow-lg hover:bg-gray-100">
            <h2 class="text-lg font-semibold text-blue-700"><%= page.title %></h2>
          </a>
        <% } %>
      <% }); %>
    </div>
  <% } %>

  <footer class="mt-auto p-4 flex justify-center items-center gap-4 text-sm text-gray-500">
    <% if (title === 'My Pages') { %>
      <button onclick="window.location.href='/my-chapters/<%= chapter.courseId %>'" class="bg-gray-600 text-white px-6 py-2 rounded hover:bg-gray-700 transition">
        Go Back
      </button>
    <% } else { %>
      <button onclick="window.history.back()" class="bg-gray-600 text-white px-6 py-2 rounded hover:bg-gray-700 transition">
        Go Back
      </button>
    <% } %>
    <a href="/Educator" class="underline hover:text-gray-700 transition">
      Back to Dashboard
    </a>
  </footer>

</body>
</html>
