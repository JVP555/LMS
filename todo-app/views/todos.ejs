<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Todo Application</title>
  <link href="/css/styles.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="grid grid-cols-6">
    <div class="col-start-2 col-span-4 px-4">
      <!-- Include Header -->
      <%- include('header') %>
      <a href="/signout" class="inline-block bg-red-600 text-white px-4 py-1.5 rounded hover:bg-red-700 font-medium ml-20 mt-3 float-right">
        signout
      </a>

      <!-- Form to create a new todo -->
      <form id="todoForm" method="POST" action="/todos" novalidate class="mt-4">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="flex gap-2 py-4">
          <div class="flex-auto">
            <input
              type="text"
              name="title"
              id="title"
              placeholder="What's next?"
              required
              class="border border-gray-300 rounded w-full p-2 text-sm text-gray-900"
            />
          </div>
          <div class="flex-auto">
            <input
              type="date"
              name="dueDate"
              id="dueDate"
              required
              class="border border-gray-300 rounded w-full p-2 text-sm text-gray-900 cursor-pointer"
            />
          </div>
          <div class="flex-none">
            <button type="submit" class="bg-green-600 text-white py-1.5 px-5 rounded font-medium">Add</button>
          </div>
        </div>
      </form>

      <!-- Include Todos List -->
      <%- include('todo', { 
        sections: [
          { id: 'overdue', title: "Overdue", data: overdue, titleClass: 'text-red-600' },
          { id: 'due-today', title: "Due Today", data: dueToday, titleClass: 'text-blue-600' },
          { id: 'due-later', title: "Due Later", data: dueLater, titleClass: 'text-yellow-600' },
          { id: 'completed', title: "Completed Items", data: completedTodo, titleClass: 'text-green-600' }
        ], 
        csrfToken: csrfToken 
      }) %>

      <!-- Include Footer -->
      <%- include('footer') %>
    </div>
    <%- include('notifications') %>
  </div>

  <!-- Client-side validation -->
  <script>
    const form = document.getElementById("todoForm");
    const titleInput = document.getElementById("title");
    const dueDateInput = document.getElementById("dueDate");

    form.addEventListener("submit", function (e) {
      let isValid = true;
      titleInput.setCustomValidity("");
      dueDateInput.setCustomValidity("");

      if (titleInput.value.trim() === "") {
        titleInput.setCustomValidity("Please enter a title.");
        isValid = false;
      }

      if (!dueDateInput.value) {
        dueDateInput.setCustomValidity("Please select a due date.");
        isValid = false;
      }

      if (!isValid) {
        e.preventDefault();
        form.reportValidity();
      }
    });
  </script>
</body>
</html>