<div>
  <% sections.forEach(section => { %>
    <div>
      <h5 id="<%= section.title %>" class="<%= section.titleClass %> font-semibold text-lg mb-2 inline-block"><%= section.title %></h5>
      <h4 id="count-<%= section.id %>" class="<%= section.titleClass %> font-semibold text-lg mb-2 inline-block">(<%= section.data.length %>)</h4>

      <ul class="space-y-2">
        <% section.data.forEach(todo => { %>
          <li class="Todo-Item flex items-center w-fit p-2 rounded hover:bg-purple-50 cursor-pointer">
            <form id="form-<%= todo.id %>" method="POST" action="/todos/<%= todo.id %>" class="inline">
              <input type="hidden" name="_method" value="PUT">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <input type="hidden" name="completed" value="<%= !todo.completed %>" />
              <input type="checkbox"
                     id="checkbox-<%= section.id %>-<%= todo.id %>"
                     onchange="document.getElementById('form-<%= todo.id %>').submit()"
                     class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded"
                     <%= todo.completed ? 'checked' : '' %> />
            </form>

            <label for="checkbox-<%= section.id %>-<%= todo.id %>"
                   class="ml-2 text-sm text-gray-600 cursor-pointer">
              <%= todo.title %> - <%= new Date(todo.dueDate).toLocaleDateString() %>
            </label>

            <!-- Delete todo using anchor tag and form submission -->
            <a href="/todos/<%= todo.id %>/delete?_csrf=<%= encodeURIComponent(csrfToken) %>"
               class="trash-icon ml-2"
               onclick="event.preventDefault(); document.getElementById('delete-form-<%= todo.id %>').submit();">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                   stroke-width="1.5" stroke="currentColor" class="size-4">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166
                         m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077
                         L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165
                         m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201
                         a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0
                         a48.667 48.667 0 0 0-7.5 0" />
              </svg>
            </a>

            <!-- Hidden delete form -->
            <form id="delete-form-<%= todo.id %>" method="POST" action="/todos/<%= todo.id %>/delete" class="hidden">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            </form>
          </li>
        <% }) %>
      </ul>
    </div>
  <% }) %>
</div>
